// ===========================================================================================================
// ===========================================================================================================

model Favorite {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [UID], references: [id])
  UID  Int

  watch Watch @relation(fields: [WID], references: [id])
  WID   Int

  isActive Boolean @default(true)
}

// ===========================================================================================================
// ===========================================================================================================

model Cart {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [UID], references: [id])
  UID  Int

  watch Watch @relation(fields: [WID], references: [id])
  WID   Int

  quantity Int

  isActive Boolean @default(true)
}

// ===========================================================================================================
// ===========================================================================================================

model Order {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  status        orderProcess  @default(created)
  total         Float
  paymentMethod paymentMethod

  user User @relation(fields: [UID], references: [id])
  UID  Int

  Note String?

  isActive        Boolean          @default(true)
  Order_detail    Order_detail[]
  Delivery_detail Delivery_detail?
}

enum orderProcess {
  created
  confirm
  delivering
  delivered
  cancel
  done
}

enum paymentMethod {
  online
  offline
}

// ===========================================================================================================
// ===========================================================================================================

model Order_detail {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order Order @relation(fields: [OID], references: [id])
  OID   Int

  watch Watch @relation(fields: [WID], references: [id])
  WID   Int

  quantity Int
  total    Float
  fee      Float
}

model Delivery_detail {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  province String
  district String
  ward     String
  address  String
  shipFee  Float

  deliveryOption deliveryOption @default(standard)

  order Order @relation(fields: [OID], references: [id])
  OID   Int   @unique
}

enum deliveryOption {
  express
  standard
  saving
}

// ===========================================================================================================
// ===========================================================================================================

model Comment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [UID], references: [id])
  UID  Int

  watch Watch @relation(fields: [WID], references: [id])
  WID   Int

  content String
}

// ===========================================================================================================
// ===========================================================================================================

model Watch_rating {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [UID], references: [id])
  UID  Int

  watch Watch @relation(fields: [WID], references: [id])
  WID   Int

  score Int @default(0)
}

model Shop_rating {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [UID], references: [id])
  UID  Int

  shop Shop @relation(fields: [SID], references: [id])
  SID  Int

  score Int @default(0)
}

model Conversation {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  senderId  Int

  receiverId Int

  content String
}
